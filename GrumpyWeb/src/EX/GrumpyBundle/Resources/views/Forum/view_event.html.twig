{# src/EX/GrumpyWebBundle/Resources/views/Forum/view_event.html.twig #}

{% extends "@EXGrumpy/layout.html.twig" %}

{% block title %}
  Evénements - {{ parent() }}
{% endblock %}

{% block stylesheets %}
{{parent()}}
    <link href="{{ asset('css/event.css') }}" rel="stylesheet">
{% endblock %}

{% block ocplatform_body %}

<!--Heading -->
<h1 class="my-4" id="titre">{{ title }}
  <h2>
    <small>Ajoute tes photos !</small>
  </h2>
  <hr>
</h1>

<!-- Portfolio Item Row -->
<div class="row">

  <div class="col-md-5">
    <img class="img-fluid" src="{{ chemin_image }}" alt="soiree">
  </div>

  <div class="col-md-7">
    <h3 class="my-3">Description :</h3>
    <p>
      {{ description }}
    </p>
    <p>
      Participation: {{ price }} €
    </p>
    <p>
      Commence le: {{ start_date|date('Y-m-d') }}
    </p>
    <p>
      Statut de l'event: {{ statut }}
    </p>
    <p>
      Fréquence de l'évènement: {{ repetition }}
    </p>
  </div>

</div>
<!-- /.row -->

<hr />

<!-- Related Projects Row -->
<div class="row">
  <h3 class="my-4 col-md-12">
    Réagir
  </h3>
  <div>
    <a class="btn btn-primary" href="{{ path('ex_grumpy_add_comment', {'event_id': event_id, 'cat_comment': 'image' }) }}">Ajoute ta photo</a>
    <a class="btn btn-primary" href="{{ path('ex_grumpy_add_comment', {'event_id': event_id, 'cat_comment': 'commentaire' }) }}">Commente l'évènement</a>
    {% if is_liked == true %}
      <a class="btn btn-primary" href="#">Vous aimez cet évènement  <span class="badge badge-light">{{ like_count }}</span></a>
    {% else %}
      <a class="btn btn-primary" href="{{ path('ex_grumpy_like', {'event_id': event_id}) }}">Like  <span class="badge badge-primary">{{ like_count }}</span></a>
    {% endif %}

    {% if is_subscribed == true %}
      <a class="btn btn-primary" href="#">Vous êtes inscrit!</a>
    {% else %}
      <a class="btn btn-primary" href="{{ path('ex_grumpy_subscribe', {'event_id': event_id}) }}">S'inscrire à l'évènement</a>
    {% endif %}
  </div>
</div>
<!-- /.row -->

<hr />

<!-- Commentaires -->

<div class="row">
  <h3 class="my-4 col-md-12"> Commentaires et photos: </h3>

  {% for commentaire in commentaires %}
    <div class="col-md-12">
      {{commentaire.poster_name}}: 
      {% if commentaire.type == 'image' %}
        <img src="{{commentaire.contenu}}" alt="image commentaire" />
        <br />
      {% elseif commentaire.type == 'commentaire' %}
        {{commentaire.contenu}}
      {% endif %}
      <br />
    </div>
  {% endfor %}
</div>
{% endblock %}