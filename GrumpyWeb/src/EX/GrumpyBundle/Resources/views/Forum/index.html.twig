{% extends "@EXGrumpy/layout.html.twig" %}

{% block title %}
   Accueil {{ parent() }}
{% endblock %}

 {% block stylesheets %}
	{{parent()}}
	 <link href="{{ asset('css/index.css') }}" rel="stylesheet">
 {% endblock %}

{% block ocplatform_body %}
<!--Carousel-->
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div id="carouselExampleIndicators" class="carousel slide" ReviewCarousel="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100 img-fluid" src={{asset('img/clavier.jpeg') }} alt="1 slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100 img-fluid" src={{asset('img/curling.jpg') }} alt="2 slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100 img-fluid" src={{asset('img/tableau.jpg') }} alt="3 slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100 img-fluid" src={{asset('img/terre.jpg') }} alt="4 slide">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<!--Bloc Bienvenue-->
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron">
				<h1 class="display-4">Bienvenue sur le site du BDE du CESI !</h1>
				<p class="lead">
					Le site officiel afin de suivre toute l&apos;actualit&eacute; de ton &eacute;cole !
				</p>
				<hr class="my-4">
				<p>
					Vous pouvez commander ce que vous voulez dans notre boutique. 
	                Ou bien soumettre vos idées dans l’onglet “BOITE A IDEES”. Vous pouvez aussi vous inscrire aux différentes activités et voir les événements passés ou à venir !
				</p>
			</div>
		</div>
	</div>
</div>
{% endblock %}