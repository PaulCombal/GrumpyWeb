{# src/EX/GrumpyWebBundle/Resources/views/Forum/view_idee.html.twig #}

{% extends "@EXGrumpy/layout.html.twig" %}

{% block title %}
  Panier - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
      </br>
        <h1 id="hautdepage" class="titre">Mon Panier</h1>
    
        <div class="col-md-9">
          <h4 id="best">Produits :</h4>
          <div class="row">
            {% for produit in produits %}
            <div class="col-md-4">
              <div class="card h-100">
                <a href="../Produits/produit.html"><img class="card-img-top" src="../produit.png" alt></a>
                <div class="card-body">
                  <h4 class="card-title"><a href="../Produits/produit.html">{{produit.nom_du_produit}}</a></h4>
                  <h5>
                    Prix : {{produit.prix}} 
                    <br/>
                    Quantite : {{produit.quantite}}
                  </h5>
                  <p class="card-text">
                    Description du produit : {{produit.description}}
                  </p>
                </div>
              </div>
            </div>
            {% endfor %}

          </div>
        </br>
        {% if produits|length > 0 %}
          <a href="{{ path('ex_grumpy_validate_commande') }}" class="btn btn-primary active">Valider Commande</a>
          {% else %}
          Vous n'avez rien dans votre panier
        {% endif %}
        </div>
{% endblock %}